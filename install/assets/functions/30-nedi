#!/usr/bin/with-contenv bash

### Set Defaults
DB_HOST=${DB_HOST:-mariadb}
DB_NAME=${DB_NAME:-nedi}
DB_USER=${DB_USER:-nedi}
ENABLE_MONITORING_SERVICE=${ENABLE_MONITORING_SERVICE:-TRUE}
ENABLE_SYSLOG_SERVICE=${ENABLE_SYSLOG_SERVICE:-FALSE}
ENABLE_NETFLOW_SERVICE=${ENABLE_NETFLOW_SERVICE:-FALSE}
ENABLE_CRON=${ENABLE_CRON:-TRUE}
ENABLE_SMTP=${ENABLE_SMTP:-FALSE}
ENABLE_ZABBIX=${ENABLE_ZABBIX:-FALSE}
NFDUMP_DATA_BASE_DIR=${NFDUMP_DATA_BASE_DIR:-"/data/nfdump/datafiles"}
NEDI_CERT_INFO=${NEDI_CERT_INFO:-"/C=CH/ST=ZH/L=Zurich/O=NeDi Consulting/OU=R&D"}
