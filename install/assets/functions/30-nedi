NEDI_VERSION=${NEDI_VERSION:-1.8C}
PHP_INI_FILE=${PHP_INI_FILE:-"/etc/php7/php.ini"}
SKIP_SANITY_CHECK=${SKIP_SANITY_CHECK:-FALSE}
